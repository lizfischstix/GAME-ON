<h2>{{ }}</h2> <!-- insert the game title -->
<p>{{ }}</p> <!-- insert the games description -->
<!-- any other game details to be shown on the review page? -->

<div class="">

    <form action="/submit-review" method="post">
        <!-- Hidden field to store the game ID -->
        <input type="hidden" name="gameId" value="{{ game.id }}">

        <label for="reviewTitle">Review Title:</label>
        <input type="text" id="reviewTitle" name="reviewTitle" required>

        <label for="reviewBody">Enter Review Here:</label>
        <textarea id="reviewBody" name="reviewBody" required></textarea>

        <label for="starRating">Star Rating:</label>
        <select id="starRating" name="starRating" required>
            <option value="1">1 Star</option>
            <option value="2">2 Stars</option>
            <option value="3">3 Stars</option>
            <option value="4">4 Stars</option>
            <option value="5">5 Stars</option>
        </select>

        <button type="submit">Submit Review</button>
    </form>

</div>