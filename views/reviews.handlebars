<div class="review-container">
    <div class="review-card-container">
        <div class="card" id="review-game-card" style="width: 18rem;">
            <img src={{thumbnail}} class="review-card-img-top" alt="...">
            <div class="review-card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{short_description}}</p>
                <p>{{genre}} | {{platform}} | {{developer}}</p>
            </div>
        </div>
    </div>

    <form action="/submit-review" method="post">
        <!-- Hidden field to store the game ID -->
        <input type="hidden" name="gameId" value="{{ game_id }}">

        <div class="review-input-group">
            <label for="reviewTitle">Review Title</label>
            <input type="text" id="reviewTitle" name="reviewTitle">
        </div>

        <div class="review-input-group">
            <label for="reviewBody">Review Body</label>
            <textarea id="reviewBody" name="reviewBody"></textarea>
        </div>

        <div class="review-input-group">
            <label for="starRating">Star Rating:</label>
            <select id="starRating" name="starRating" required>
        </div>
        <option value="1">1 Star</option>
        <option value="2">2 Stars</option>
        <option value="3">3 Stars</option>
        <option value="4">4 Stars</option>
        <option value="5">5 Stars</option>
        </select>

        <div>
            <button class="review-button" type="submit">Submit Review</button>
        </div>
    </form>

</div>
</body>