
<div class="greeting">Hey {{username}}, welcome back!</div>
<div id="games-card">

    {{#each games as |game|}}
<div class="card text-color-black" style="width: 18rem;">
  <img src={{game.thumbnail}} class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{game.title}} {{average_stars}}</h5>
    <p class="card-text">{{game.short_description}}</p>
    <p>{{game.genre}} | {{game.platform}} | {{game.developer}}</p>
    <a href={{game_url}} class="btn btn-primary">Play {{title}}!</a>
     <a class="btn btn-primary del-game" data-savedid = "{{game.saved.id}}">Delete</a>
  </div>
</div>
    {{/each}} 
</div>

<script src="/js/deleteGame.js"></script>
